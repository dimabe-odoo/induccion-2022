<div class="modal" tabindex="-1" id="modal-add-project">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar nuevo proyecto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/projects/Save" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="">Nombre</label>
                        <input required="required" type="text" name="ProjectName" class="form-control" />
                    </div>
                    <div class="form-group mt-5">
                        <label for="">Cover</label>
                        <input required="required" type="file" name="ProjectFile" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>